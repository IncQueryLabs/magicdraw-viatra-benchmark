	</requires>

    <runtime>
        <library name="instaschema.test.jar"/>
        <library name="lib/junit.jar"/>
        <library name="lib/maven-surefire-common.jar"/>
        <library name="lib/surefire-api.jar"/>
        <library name="lib/surefire-junit4.jar"/>
    </runtime>

</plugin>
